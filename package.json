{
  "name": "tibetan-to-phonetics",
  "version": "0.8.0",
  "description": "A naive attempt at automatically generating reliable Tibetan phonetics based on customizable sets of rules.",
  "main": "dist/tibetan-to-phonetics.umd.js",
  "module": "dist/tibetan-to-phonetics.esm.js",
  "devDependencies": {
    "jest": "^29.7.0",
    "rollup": "^4.2.0"
  },
  "dependencies": {
    "tibetan-normalizer": "^0.1.0",
    "tibetan-syllable-parser": "^1.0.3",
    "underscore": "^1.13.6"
  },
  "scripts": {
    "clean": "rm -rf ./dist && mkdir dist",
    "build": "npm run clean && npm run build:esm && npm run build:umd",
    "build:esm": "rollup src/tibetan-to-phonetics.js --format esm --file dist/tibetan-to-phonetics.esm.js",
    "build:umd": "rollup src/tibetan-to-phonetics.js --format umd --name TibetanToPhonetics --file dist/tibetan-to-phonetics.umd.js",
    "test": "jest --colors",
    "test:watch": "jest --colors --watch"
  },
  "keywords": [
    "tibetan",
    "unicode",
    "phonetics",
    "languages",
    "linguistics",
    "transliteration"
  ],
  "license": "MIT"
}
